                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/teal_700"
                android:text="@string/txtReseñaP" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="193dp"
            android:layout_height="229dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/obraf5"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                app:srcCompat="@drawable/obrap5" />

            <TextView
                android:id="@+id/nombreObraf5"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:paddingLeft="25dp"
                android:text="&quot;Arlequín&quot;"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/descripcionobraf5"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/teal_700"
                android:text="@string/txtReseñaP" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="511dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/obraf6"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                app:srcCompat="@drawable/obrap6" />

            <TextView
                android:id="@+id/nombreObraf6"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:paddingLeft="25dp"
                android:text="&quot;Ma jolie&quot;"
                android:textAlignment="viewStart"
                android:textSize="20sp" />

            <Button
                android:id="@+id/descripcionobraf6"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/teal_700"
                android:text="@string/txtReseñaP" />


