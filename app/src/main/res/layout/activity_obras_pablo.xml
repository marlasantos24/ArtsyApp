<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/teal_700"
    android:orientation="vertical"
    tools:context=".ObrasPablo">

    <Button
        android:id="@+id/bvolver1"
        android:layout_width="46dp"
        android:layout_height="36dp"
        android:background="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="264dp"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="Obras Pablo Picasso"
        android:textColor="@color/purple_200"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="229dp"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/obraf1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                app:srcCompat="@drawable/obrap1" />

            <TextView
                android:id="@+id/nombreObraf1"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:paddingLeft="25dp"
                android:text="&quot;El sueño&quot;"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/descripcionobraf1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/teal_700"
                android:text="@string/txtReseñaP" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="511dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/obraf2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                app:srcCompat="@drawable/obrap2" />

            <TextView
                android:id="@+id/nombreObraf2"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:paddingLeft="25dp"
                android:text="&quot;Autorretrato&quot;"
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <Button
                android:id="@+id/descripcionobraf2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/teal_700"
                android:text="@string/txtReseñaP" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="186dp"
            android:layout_height="229dp"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/obraf3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                app:srcCompat="@drawable/obrap3" />

            <TextView
                android:id="@+id/nombreObraf3"
                android:layout_width="wrap_content"
